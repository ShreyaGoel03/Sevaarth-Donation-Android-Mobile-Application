<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DonorActivity2"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Organization"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/recycler2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.458" />

        <View
            android:id="@+id/view"
            style="@style/Divider"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="160dp"
            android:backgroundTint="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.016"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.017"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/chat"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:layout_marginTop="132dp"
            android:layout_marginRight="46dp"
            android:background="@drawable/chat"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.291"
            app:layout_constraintStart_toEndOf="@+id/showdetails"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/showdetails"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="132dp"
            android:background="@drawable/details"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/donate"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/donate"
            android:textColor="@color/white"
            android:layout_marginRight="46dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.215"
            app:layout_constraintStart_toEndOf="@+id/showevents"
            app:layout_constraintTop_toBottomOf="@+id/chat"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/showevents"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/events"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showdetails"
            tools:ignore="MissingConstraints" />

        <!--        <Button-->
<!--            android:id="@+id/signout"-->
<!--            android:layout_width="154dp"-->
<!--            android:layout_height="179dp"-->

<!--            android:layout_marginTop="52dp"-->
<!--            android:background="@drawable/signout"-->
<!--            android:textColor="@color/white"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintHorizontal_bias="0.536"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/displayevents"-->
<!--            tools:ignore="MissingConstraints" />-->

        <Button
            android:id="@+id/Show_Location"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            android:background="@drawable/location"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donate"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            app:backgroundTint="@null"
            android:foreground="@drawable/floating_button_logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.828"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/displayevents"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/displayevents"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/display"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/Show_Location"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showevents"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>